# Database
DATABASE_URL="file:./prisma/data.db"

# n8n Webhook Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/office-health-checkup
N8N_WEBHOOK_KEY=your-api-key-here

# OBS (Object Storage Service) Configuration
# Set OBS_ENABLED=true to enable OBS uploads, false to use base64 encoding
OBS_ENABLED=false
OBS_PROVIDER=aws-s3
# Options: aws-s3, azure-blob, generic (for S3-compatible services)
OBS_BUCKET=your-bucket-name
OBS_REGION=us-east-1
OBS_ENDPOINT=
# Leave empty for AWS S3, set for S3-compatible services (e.g., https://s3.example.com)
OBS_ACCESS_KEY_ID=your-access-key-id
OBS_SECRET_ACCESS_KEY=your-secret-access-key
OBS_PATH_PREFIX=office-health-checkup
# Optional: Custom public URL if different from default
OBS_PUBLIC_URL=

# Application (Optional)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_MAX_PHOTOS_PER_PROPERTY=5


